<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>@ViewData["Title"] - ELubricate</title>

    <link href="~/assets/css/main.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />
    <link rel="icon" type="image/x-icon" href="~/assets/favicon/favicon.png" />

    <!-- Swiper -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css" />
</head>

<body>
    <div>
        <!-- HEADER -->
        <section class="fixed-top">
            <nav class="navbar navbar-expand-lg navbar-top" data-aos="fade-down">
                <div class="container">
                    <a class="navbar-brand d-flex align-items-center" href="/">
                        <img src="~/assets/icon/logo_pertamina_lubricants.png" alt="E-Lubricants" height="35" />
                        <span href="#">E-Lubricants</span>
                    </a>

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0"></ul>
                        <span class="user-login">
                            <a href="/login.html">
                                <img src="/assets/avatar/user.png" alt="user" height="25" />
                                <span>Login/Register</span>
                            </a>
                        </span>
                        <form class="d-flex" role="search">
                            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" />
                            <i class="fa fa-search"></i>
                        </form>
                    </div>
                </div>
            </nav>

            <nav class="navbar navbar-dark navbar-expand-lg navbar-bottom" data-aos="fade-down">
                <div class="container">
                    <div class="collapse navbar-collapse justify-content-center" id="navbarSupportedContent">
                        <ul class="navbar-nav mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="/">Beranda</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" aria-current="page" href="#">Tentang e-Lubricants</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                                    aria-expanded="false">
                                    E-Library
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="#">Category 1</a></li>
                                    <li><a class="dropdown-item" href="#">Category 2</a></li>
                                    <li><a class="dropdown-item" href="#">Category 3</a></li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Panduan</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>

        </section>



        @RenderBody()
    </div>

    <!-- Footer -->
    <footer>
        <section class="footer-top">
            <div class="container">
                <div class="row footer-top-row">
                    <div class="col col-md-4">
                        <a href="/">
                            <img src="/assets/icon/Pertamina Lubricants White.png" class="logo-footer" alt="" />
                        </a>
                        <h5>E-Lubricants</h5>
                        <p>
                            PT. PERTAMINA LUBRICANTS Graha Pertamina, Tower Pertamax, floor
                            16th Jl. Merdeka Timur no. 10, Gambir Jakarta Pusat 10110
                        </p>
                    </div>
                    <div class="col col-md-8">
                        <div class="row justify-content-center">
                            <div class="col-auto col-md-4">
                                <h6>DIRECTION</h6>
                                <ul>
                                    <li>
                                        <a href="#">Tentang E-Lubricants</a>
                                    </li>
                                    <li>
                                        <a href="#">Panduan</a>
                                    </li>
                                </ul>
                            </div>
                            <div class="col-auto col-md-4">
                                <h6>E-LIBRARY</h6>
                                <ul>
                                    <li>
                                        <a href="#">Sharing Troubleshoot</a>
                                    </li>
                                    <li>
                                        <a href="#">Sharing Knowledge</a>
                                    </li>
                                    <li>
                                        <a href="#">Recommendation</a>
                                    </li>
                                </ul>
                            </div>
                            <div class="col-auto col-md-3">
                                <h6 class="title-socmed-footer">Follow us</h6>
                                <div class="socmed">
                                    <img src="/assets/icon/socmed (1).png" alt="" />
                                    <img src="/assets/icon/socmed (2).png" alt="" />
                                    <img src="/assets/icon/socmed (3).png" alt="" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <footer class="footer-bottom">
            <div class="container">
                <div class="row">
                    <div class="col">
                        <p>
                            Copyright © 2023 Pertamina E-LUBRICANTS | Technical Specialist. All rights
                            reserved.
                        </p>
                    </div>
                </div>
            </div>
        </footer>
    </footer>

    <!-- Bootstrap core JavaScript -->
    <script src="~/vendor/jquery/jquery.slim.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init();
    </script>

    <!-- Swiper JS -->
    <script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>

    <!-- Initialize Swiper -->
    <script>

        const progressCircle = document.querySelector(".autoplay-progress svg");
        const progressContent = document.querySelector(".autoplay-progress span");

        var swiper = new Swiper(".mySwiper", {
            effect: "cube",
            grabCursor: true,
            loop: true,
            speed: 1000,
            cubeEffect: {
                shadow: false,
            },
            pagination: {
                el: ".swiper-pagination",
                clickable: true,
            },
            autoplay: {
                delay: 5000,
                disableOnInteraction: false
            },
            on: {
                autoplayTimeLeft(s, time, progress) {
                    progressCircle.style.setProperty("--progress", 5 - progress);
                    progressContent.textContent = `${Math.ceil(time / 1000)}s`;
                }
            }
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)

</body>

</html>

